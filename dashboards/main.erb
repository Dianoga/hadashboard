<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="clock" data-view="Clock" data-title="Synergy" data-min="0" data-max="100"></div>
    </li>

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="2">
      <div data-id="weather" data-view="Stweather"></div>
    </li>

    <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="firelights" data-view="Stswitch" data-icon="lightbulb" data-title="Fireplace" data-device="Fireplace Lights" data-event-touchend="onClick" data-event-click="onClick"></div>
    </li>
	
	<li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="frontdoorlights" data-view="Stswitch" data-icon="lightbulb" data-title="Frontdoor" data-device="Front Door Lights" data-event-touchend="onClick" data-event-click="onClick"></div>
    </li>

	<li data-row="3" data-col="7" data-sizex="1" data-sizey="1">
      <div data-id="reload" data-view="Reload" data-event-touchend="onClick" data-event-click="onClick"></div>
    </li>
	
	<li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="mode" data-view="Stmode" data-title="Current Mode"></div>
    </li>  	
	
	<li data-row="2" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="washerpower" data-view="Stmeter" data-title="Washer" data-min="0"></div>
    </li>
	
	<li data-row="2" data-col="6" data-sizex="1" data-sizey="1">
      <div data-id="dryerpower" data-view="Stmeter" data-title="Dryer" data-min="0"></div>
    </li>
	
	<li data-row="3" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="occmode" data-view="Stmodechange" data-title="Set Home" data-icon="home" data-changemode="Home" data-phrase="Make Occupied (Day)" data-countdown="30" data-event-touchend="onClick" data-event-click="onClick"></div>
    </li>
	
	<li data-row="3" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="unoccmode" data-view="Stmodechange" data-title="Set Away" data-icon="road" data-changemode="Away" data-phrase="Make Unoccupied" data-countdown="30" data-event-touchend="onClick" data-event-click="onClick"></div>
    </li>
	  
	<li data-row="3" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="octemp" data-view="Sttemp" data-title="Outdoors" data-device="Front Door Multisensor"></div>
    </li>  
	  
    <li data-row="3" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="lrtemp" data-view="Sttemp" data-title="Living Room" data-device="Nest"></div>
    </li>    

  </ul>
</div>